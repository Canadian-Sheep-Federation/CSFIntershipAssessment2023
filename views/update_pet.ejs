<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Pets</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update Pet</h2>
            <span class="text-light">Use the form below to update a pet's information</span>
        </div>

                <!-- form handling -->
                <form action = "/api/pets/<%= pet._id %>" method="POST" id = "update_pet">
                    <div class="new_pet"> 
                        <div class="form-group">
                            <label for="name" class = "text-light">Name</label>
                            <input type="hidden" name="id" value="<%= pet._id %>">
                            <input type="text" name="name" value="<%= pet.name %>" placeholder="Jerry">
                        </div>
                        <div class="form-group">
                            <label for="age" class="text-light">Age</label>
                            <input type="text" name="age" value="<%= pet.age%>" placeholder="puppy">
                        </div>
                        <div class="form-group">
                            <label for="breed" class="text-light">Breed</label>
                            <input type="text" name="breed" value="<%= pet.breed%>" placeholder="american bulldog">    
                        </div>
        
                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Save</button>
                        </div>
                        
                    </div> 
                </form>

    </div>
</main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->